{
  "info": {
    "name": "DigiMeta007 API",
    "description": "API Collection untuk DigiMeta007 - Blog & Products Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Blog",
      "item": [
        {
          "name": "Get All Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/blog?pageSize=10&offset=0",
              "host": ["{{base_url}}"],
              "path": ["blog"],
              "query": [
                {
                  "key": "pageSize",
                  "value": "10",
                  "description": "Number of posts per page"
                },
                {
                  "key": "offset",
                  "value": "0",
                  "description": "Offset for pagination"
                }
              ]
            },
            "description": "Retrieve all blog posts with pagination"
          }
        },
        {
          "name": "Get Single Post",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/blog/:id",
              "host": ["{{base_url}}"],
              "path": ["blog", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "POST_OBJECT_ID",
                  "description": "Backendless objectId of the post"
                }
              ]
            },
            "description": "Get a single blog post by ID"
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"5 Strategi Digital Marketing untuk UMKM\",\n  \"content\": \"Digital marketing adalah kunci sukses bisnis modern. Berikut 5 strategi yang bisa Anda terapkan untuk mengembangkan bisnis UMKM Anda...\",\n  \"excerpt\": \"Pelajari 5 strategi digital marketing yang efektif untuk mengembangkan bisnis UMKM Anda\",\n  \"featuredImage\": \"https://images.unsplash.com/photo-1460925895917-afdab827c52f\",\n  \"category\": \"Digital Marketing\",\n  \"author\": \"DigiMeta007 Team\",\n  \"published\": true,\n  \"slug\": \"strategi-digital-marketing-umkm\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/blog",
              "host": ["{{base_url}}"],
              "path": ["blog"]
            },
            "description": "Create a new blog post"
          }
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"content\": \"Updated content...\",\n  \"published\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/blog/:id",
              "host": ["{{base_url}}"],
              "path": ["blog", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "POST_OBJECT_ID"
                }
              ]
            },
            "description": "Update an existing blog post"
          }
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/blog/:id",
              "host": ["{{base_url}}"],
              "path": ["blog", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "POST_OBJECT_ID"
                }
              ]
            },
            "description": "Delete a blog post"
          }
        },
        {
          "name": "Search Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/blog/search?q=digital marketing",
              "host": ["{{base_url}}"],
              "path": ["blog", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "digital marketing",
                  "description": "Search query"
                }
              ]
            },
            "description": "Search blog posts by title or content"
          }
        },
        {
          "name": "Get Posts by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/blog/category/:category",
              "host": ["{{base_url}}"],
              "path": ["blog", "category", ":category"],
              "variable": [
                {
                  "key": "category",
                  "value": "Digital Marketing"
                }
              ]
            },
            "description": "Get all posts in a specific category"
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products",
              "host": ["{{base_url}}"],
              "path": ["products"]
            }
          }
        },
        {
          "name": "Get Single Product",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products/:id",
              "host": ["{{base_url}}"],
              "path": ["products", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Product Name\",\n  \"description\": \"Product description\",\n  \"price\": 99.99,\n  \"stock\": 100\n}"
            },
            "url": {
              "raw": "{{base_url}}/products",
              "host": ["{{base_url}}"],
              "path": ["products"]
            }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Product\",\n  \"price\": 149.99\n}"
            },
            "url": {
              "raw": "{{base_url}}/products/:id",
              "host": ["{{base_url}}"],
              "path": ["products", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products/:id",
              "host": ["{{base_url}}"],
              "path": ["products", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
